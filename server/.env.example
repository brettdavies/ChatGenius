# Server Configuration
PORT=3001
NODE_ENV=development

# Security
CORS_ORIGIN=http://localhost:3000

# Database Configuration (Railway)
# Base PostgreSQL Configuration
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-password-here"
POSTGRES_DB="railway"

# PostgreSQL Connection Details
PGUSER="${POSTGRES_USER}"
PGPASSWORD="${POSTGRES_PASSWORD}"
PGDATABASE="${POSTGRES_DB}"
PGPORT="5432"
PGDATA="/var/lib/postgresql/data/pgdata"

# Railway-specific Configuration
PGHOST="${RAILWAY_PRIVATE_DOMAIN}"
DATABASE_URL="postgresql://${PGUSER}:${PGPASSWORD}@${RAILWAY_PRIVATE_DOMAIN}:${PGPORT}/${PGDATABASE}"
DATABASE_PUBLIC_URL="postgresql://${PGUSER}:${PGPASSWORD}@${RAILWAY_TCP_PROXY_DOMAIN}:${RAILWAY_TCP_PROXY_PORT}/${PGDATABASE}"

# SSL Configuration
SSL_CERT_DAYS="820"