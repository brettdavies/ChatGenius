# Required Environment Variables
# -----------------------------
# Environment (development, test, or production)
VITE_NODE_ENV=development

# API URL for backend communication
VITE_API_URL=http://localhost:5000

# Optional Environment Variables (with defaults)
# -----------------------------
# Application Information
VITE_APP_NAME=ChatGenius
VITE_APP_DESCRIPTION="Real-time chat application"
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_2FA=true
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_RICH_TEXT=true

# UI Configuration
VITE_MAX_MESSAGE_LENGTH=4000
VITE_MAX_CHANNEL_NAME_LENGTH=80
VITE_MAX_USERNAME_LENGTH=50

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=2000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# Cache Configuration
VITE_CACHE_TTL=3600
VITE_MAX_CACHED_MESSAGES=1000
