# Application
VITE_APP_NAME=ChatGenius
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development # development | staging | production

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication (Auth0)
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=your-api-identifier

# Session Configuration
# Production recommended values: 30 minutes timeout, 5 minutes warning
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_SESSION_WARNING_MINUTES=5

# Feature Flags
VITE_ENABLE_REALTIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOADS=true

# Theme Configuration
VITE_DEFAULT_THEME=system # light | dark | system
VITE_DEFAULT_LANGUAGE=en

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760 # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
